<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CalvaExamenP3.ViewModels"
             x:Class="CalvaExamenP3.Views.AgregarContactoPage"
             Title="Agregar Contacto">

    <ContentPage.BindingContext>
        <vm:AgregarContactoViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Label 
                Text="Realizado por Johann Calva, nacido el 20/04/2004"
                HorizontalOptions="Center" />

            <Entry Placeholder="Ingrese el nombre" 
                   Text="{Binding Nombre}" />

            <Entry Placeholder="Ingrese el correo"
                   Text="{Binding Correo}" />

            <Entry Placeholder="Ingrese el telÃ©fono"
                   Text="{Binding Telefono}" />

            <Label Text="Agregar a Favoritos" />
            <CheckBox IsChecked="{Binding Favorito}" />

            <Button Text="Guardar Contacto"
                    Clicked="BtnGuardarContacto_Clicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
