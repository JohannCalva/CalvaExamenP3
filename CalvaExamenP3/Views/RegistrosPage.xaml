<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalvaExamenP3.Views.RegistrosPage"
             Title="Registros">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Contactos guardados" FontAttributes="Bold" FontSize="20" HorizontalOptions="Center" />

        <CollectionView ItemsSource="{Binding Contactos}"
                        SelectionMode="None"
                        Margin="0,10,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray" CornerRadius="5" Padding="10" Margin="0,5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Nombre}" FontAttributes="Bold" FontSize="16" />
                            <Label Text="{Binding Correo}" FontSize="14" />
                            <Label Text="{Binding Telefono}" FontSize="14" />
                            <Label Text="{Binding Favorito, Converter={StaticResource BoolToFavoritoConverter}}" FontSize="14" TextColor="DarkGreen"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
